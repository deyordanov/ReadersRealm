@model DeleteBookViewModel

<form method="post" class="w-100" style="display: flex; -o-justify-content: center; -webkit-justify-content: center; justify-content: center">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4 w-50 px-4 border-black">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Title"></label>
            <input type="text" class="form-control" asp-for="Title" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Description"></label>
            <textarea type="text" class="form-control" asp-for="Description" style="max-height: 200px;" disabled></textarea>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="ISBN"></label>
            <input type="text" class="form-control" asp-for="ISBN" disabled>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0 text-dark" asp-for="Price"></label>
            <input type="number" class="form-control" asp-for="Price" disabled>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Pages"></label>
            <input type="number" class="form-control" asp-for="Pages" disabled>
        </div>
        <select name="BookCover" class="mb-3 row p-1" disabled>
            <label class="p-0" asp-for="BookCover"></label>
            <option value="@Model.BookCover">@Model.BookCover</option>
        </select>
        <div class="mb-3 row p-1">
            <div style="display: flex; gap: 0.4rem">
                <div class="form-check">
                    @if (Model.Used)
                    {
                        <input class="form-check-input" type="radio" name="Used" asp-for="Used" value="true" checked="checked" disabled>
                    }
                    else
                    {
                        <input class="form-check-input" type="radio" name="Used" asp-for="Used" value="true" disabled>
                    }
                    <label class="form-check-label" asp-for="Used">
                        Yes
                    </label>
                </div>
                <div class="form-check">
                    @if (!Model.Used)
                    {
                        <input class="form-check-input" type="radio" name="Used" asp-for="Used" value="false" checked="checked" disabled>
                    }
                    else
                    {
                        <input class="form-check-input" type="radio" name="Used" asp-for="Used" value="false" disabled>
                    }
                    <label class="form-check-label" asp-for="Used">
                        No
                    </label>
                </div>
            </div>
            <span asp-validation-for="Used" class="text-danger"></span>
        </div>
        <select name="AuthorId" class="mb-3 row p-1" disabled>
            <label class="p-0" asp-for="AuthorId"></label>
            <option value="@Model.AuthorId">@($"{Model.Author.FirstName} {Model.Author.LastName}")</option>
        </select>
        <select name="CategoryId" class="mb-3 row p-1" disabled>
            <label class="p-0" asp-for="AuthorId"></label>
            <option value="@Model.CategoryId">@Model.Category.Name</option>
        </select>
        <div class="row">
            <div class="col-6">
                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back To List
                </a>
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary bg-black text-white form-control">Delete</button>
            </div>
        </div>
    </div>
</form>