@using ReadersRealm.ViewModels.Category
@model IEnumerable<AllBooksViewModel>

<partial name="_NotificationPartialView" />
<div class="container p-0">
    <div class="row pt-4">
        <div class="col-12 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Create A New Book
            </a>
        </div>
    </div>
</div>

<table class="table table-hover table-striped table-bordered border-black">
    <thead>
    <tr>
        <th>
            Title
        </th>
        <th>
            Price
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (AllBooksViewModel bookModel in @Model)
    {
        <tr>
            <td>
                @bookModel.Title
            </td>
            <td>
                @bookModel.Price
            </td>
            <td>
                @bookModel.Description
            </td>
            <td>
                @(bookModel.Author.FirstName + " " + bookModel.Author.LastName)
            </td>
            <td>
                <div class="w-100">
                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@bookModel.Id" class="btn btn-primary btn-sm" style="font-size: 13px">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@bookModel.Id" class="btn btn-danger btn-sm" style="font-size: 13px">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>