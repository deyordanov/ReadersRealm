@using ReadersRealm.Web.ViewModels.Category
@model IEnumerable<ReadersRealm.Web.ViewModels.Category.AllCategoriesViewModel>

<partial name="_NotificationPartialView" />
<div class="container p-0">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Create A New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-hover table-striped table-bordered border-black">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (AllCategoriesViewModel categoryModel in @Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>
                    @categoryModel.Name
                </td>
                <td>
                    @categoryModel.DisplayOrder
                </td>
                <td>
                    <div class="w-100">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@categoryModel.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@categoryModel.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>