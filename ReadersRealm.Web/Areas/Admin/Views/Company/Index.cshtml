 @model PaginatedList<AllCompaniesViewModel>

<partial name="_NotificationPartialView" />
<div class="row mb-2">
    <form asp-controller="Company" asp-action="Index" method="get" class="col-8" style="display: flex">
        <div class="col-3 px-0">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search" name="searchTerm" value="@ViewBag.SearchTerm">
        </div>
        <div class="col-3 px-0">
            <button class="btn btn-success" type="submit">Search</button>
        </div>
    </form>
    <div class="col-4" style="display: flex; justify-content: end">
        <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
            <i class="bi"></i> Create A New Company
        </a>
    </div>
</div>
@if (Model.Count != 0)
{
    <table class="table table-bordered table-striped border-black" style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Unified Identification Code</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AllCompaniesViewModel companyModel in @Model)
            {
                <tr>
                    <td>
                        @companyModel.Name
                    </td>
                    <td>
                        @companyModel.UIC
                    </td>
                    <td>
                        @companyModel.Email
                    </td>
                    <td>
                        <div class="w-100">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@companyModel.Id" asp-route-pageIndex="@Model.PageIndex" asp-route-searchTerm="@ViewBag.SearchTerm" class="btn btn-primary btn-sm" style="font-size: 13px">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@companyModel.Id" class="btn btn-danger btn-sm" style="font-size: 13px">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else 
{
    <h1>No products found!</h1>
}

@{
    bool prevDisabled = !Model.HasPreviousPage ? true : false;
    bool nextDisabled = !Model.HasNextPage ? true : false;
}

<nav>
    <ul class="row p-0">
        <li class="page-item col-6" style="display: flex; justify-content: start">
            @if (prevDisabled)
            {
                <button asp-controller="Company" asp-action="Index" class="page-link" disabled>
                    <span style="font-size: 1rem" class="btn btn-outline-danger">Previous</span>
                </button>
            }
            else
            {
                <a asp-controller="Company" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-route-searchTerm="@ViewBag.SearchTerm" class="page-link">
                    <span style="font-size: 1rem" class="btn btn-outline-dark">Previous</span>
                </a>
            }
        </li>
        <li class="page-item col-6" style="display: flex; justify-content: end">
            @if (nextDisabled)
            {
                <button asp-controller="Company" asp-action="Index" class="page-link" disabled>
                    <span style="font-size: 1rem" class="btn btn-outline-danger">Next</span>
                </button>
            }
            else
            {
                <a asp-controller="Company" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-route-searchTerm="@ViewBag.SearchTerm" class="page-link">
                    <span style="font-size: 1rem" class="btn btn-outline-dark">Next</span>
                </a>
            }
        </li>
    </ul>
</nav>
