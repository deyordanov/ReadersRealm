@model ReadersRealm.Web.ViewModels.Book.DeleteBookViewModel

<form method="post" class="w-100" style="display: flex; -o-justify-content: center; -webkit-justify-content: center; justify-content: center">
    <input asp-for="Id" hidden />
    <fieldset class="border p-3 mt-4 w-50 px-4 border-black">
        <legend class="text-primary">Delete Book</legend>
        <div class="row pb-2">
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Title" aria-label="Title"></label>
            <input type="text" class="form-control" asp-for="Title" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Description" aria-label="Description"></label>
            <textarea class="form-control" asp-for="Description" style="max-height: 200px;" disabled></textarea>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="ISBN" aria-label="ISBN"></label>
            <input type="text" class="form-control" asp-for="ISBN" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0 text-dark" asp-for="Price" aria-label="Price"></label>
            <input type="number" class="form-control" asp-for="Price" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Pages" aria-label="Pages"></label>
            <input type="number" class="form-control" asp-for="Pages" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="BookCover" aria-label="Book Cover"></label>
            <select asp-for="BookCover" name="BookCover" disabled>
                <option value="@Model.BookCover">@(Model.BookCover == null ? "No Book Cover Selected" : Model.BookCover)</option>
            </select>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Used" aria-label="Used"></label>
            <div style="display: flex; gap: 0.4rem">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Used" asp-for="Used" value="true" asp-is-checked="@Model.Used" />
                    <label class="form-check-label" asp-for="Used">
                        Yes
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Used" asp-for="Used" value="false" asp-is-checked="@(!Model.Used)" />
                    <label class="form-check-label" asp-for="Used">
                        No
                    </label>
                </div>
            </div>
            <span asp-validation-for="Used" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="AuthorId" aria-label="Author ID"></label>
            <select asp-for="AuthorId" name="AuthorId" disabled>
                <option value="@Model.AuthorId">@($"{Model.Author.FirstName} {Model.Author.LastName}")</option>
            </select>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="CategoryId" aria-label="Category ID"></label>
            <select asp-for="CategoryId" name="CategoryId" disabled>
                <option value="@Model.CategoryId">@Model.Category.Name</option>
            </select>
        </div>
        @if (Model.ImageId != null)
        {
            <div class="mb-3 row p-1">
                <label asp-for="ImageId" class="row" aria-label="Image URL"></label>
                <img src="@Url.Action("GetImage", "Book", new { id = Model.ImageId })" width="100%" class="col-4 mt-3" style="-ms-border-radius: 5px; border-radius: 5px; border: 1px solid #bbb9b9">
            </div>
            <input asp-for="ImageId" value=@Model.ImageId hidden />
        }
        <div class="row">
            <div class="col-6">
                <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back To List
                </a>
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-outline-primary bg-black text-white form-control">Delete</button>
            </div>
        </div>
    </fieldset>
</form>
